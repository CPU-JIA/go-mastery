# ==============================================
# Blog System Environment Configuration
# ==============================================

# Server Configuration
BLOG_SERVER_HOST=0.0.0.0
BLOG_SERVER_PORT=8080
BLOG_SERVER_MODE=debug

# Database Configuration
BLOG_DATABASE_DRIVER=sqlite
BLOG_DATABASE_SQLITE_PATH=blog.db

# PostgreSQL Configuration (when using postgres)
BLOG_DATABASE_POSTGRES_HOST=localhost
BLOG_DATABASE_POSTGRES_PORT=5432
BLOG_DATABASE_POSTGRES_USER=blog_user
BLOG_DATABASE_POSTGRES_PASSWORD=blog_password
BLOG_DATABASE_POSTGRES_DBNAME=blog_system
BLOG_DATABASE_POSTGRES_SSLMODE=disable

# Redis Configuration
BLOG_REDIS_ADDR=localhost:6379
BLOG_REDIS_PASSWORD=
BLOG_REDIS_DB=0
BLOG_REDIS_POOL_SIZE=10

# JWT Configuration
BLOG_JWT_SECRET=your-super-secret-jwt-key-change-in-production
BLOG_JWT_EXPIRES_IN=24h
BLOG_JWT_REFRESH_EXPIRES_IN=168h

# Logging Configuration
BLOG_LOGGING_LEVEL=info
BLOG_LOGGING_FORMAT=json
BLOG_LOGGING_FILE=logs/app.log
BLOG_LOGGING_MAX_SIZE=100
BLOG_LOGGING_MAX_BACKUPS=3
BLOG_LOGGING_MAX_AGE=30

# Pagination Configuration
BLOG_PAGINATION_DEFAULT_PAGE_SIZE=10
BLOG_PAGINATION_MAX_PAGE_SIZE=100

# Upload Configuration
BLOG_UPLOAD_MAX_SIZE=10485760
BLOG_UPLOAD_PATH=uploads/

# Feature Flags
BLOG_FEATURE_REGISTRATION_ENABLED=true
BLOG_FEATURE_EMAIL_VERIFICATION=false
BLOG_FEATURE_COMMENT_MODERATION=false

# External Services (Optional)
BLOG_SMTP_HOST=smtp.gmail.com
BLOG_SMTP_PORT=587
BLOG_SMTP_USER=your-email@gmail.com
BLOG_SMTP_PASSWORD=your-app-password
BLOG_SMTP_FROM=noreply@yourblog.com

# Security
BLOG_SECURITY_BCRYPT_COST=12
BLOG_SECURITY_SESSION_TIMEOUT=3600

# Performance
BLOG_CACHE_TTL=3600
BLOG_RATE_LIMIT_REQUESTS=100
BLOG_RATE_LIMIT_WINDOW=60

# Monitoring
BLOG_METRICS_ENABLED=true
BLOG_HEALTH_CHECK_INTERVAL=30s