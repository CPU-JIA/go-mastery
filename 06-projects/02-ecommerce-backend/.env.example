# ==============================================
# E-commerce Backend Environment Configuration
# ==============================================

# Server Configuration
ECOMMERCE_SERVER_HOST=0.0.0.0
ECOMMERCE_SERVER_PORT=8080
ECOMMERCE_SERVER_MODE=debug

# Database Configuration
ECOMMERCE_DATABASE_DRIVER=sqlite
ECOMMERCE_DATABASE_SQLITE_PATH=ecommerce.db

# PostgreSQL Configuration (when using postgres)
ECOMMERCE_DATABASE_POSTGRES_HOST=localhost
ECOMMERCE_DATABASE_POSTGRES_PORT=5432
ECOMMERCE_DATABASE_POSTGRES_USER=ecommerce_user
ECOMMERCE_DATABASE_POSTGRES_PASSWORD=ecommerce_password
ECOMMERCE_DATABASE_POSTGRES_DBNAME=ecommerce_system
ECOMMERCE_DATABASE_POSTGRES_SSLMODE=disable

# Redis Configuration
ECOMMERCE_REDIS_ADDR=localhost:6379
ECOMMERCE_REDIS_PASSWORD=
ECOMMERCE_REDIS_DB=0
ECOMMERCE_REDIS_POOL_SIZE=10

# JWT Configuration
ECOMMERCE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
ECOMMERCE_JWT_EXPIRES_IN=24h
ECOMMERCE_JWT_REFRESH_EXPIRES_IN=168h

# Logging Configuration
ECOMMERCE_LOGGING_LEVEL=info
ECOMMERCE_LOGGING_FORMAT=json
ECOMMERCE_LOGGING_FILE=logs/app.log
ECOMMERCE_LOGGING_MAX_SIZE=100
ECOMMERCE_LOGGING_MAX_BACKUPS=3
ECOMMERCE_LOGGING_MAX_AGE=30

# Pagination Configuration
ECOMMERCE_PAGINATION_DEFAULT_PAGE_SIZE=20
ECOMMERCE_PAGINATION_MAX_PAGE_SIZE=100

# Upload Configuration
ECOMMERCE_UPLOAD_MAX_SIZE=10485760
ECOMMERCE_UPLOAD_PATH=uploads/

# Feature Flags
ECOMMERCE_FEATURES_REGISTRATION_ENABLED=true
ECOMMERCE_FEATURES_EMAIL_VERIFICATION=false
ECOMMERCE_FEATURES_ORDER_NOTIFICATION=true
ECOMMERCE_FEATURES_INVENTORY_TRACKING=true

# Security Configuration
ECOMMERCE_SECURITY_BCRYPT_COST=12
ECOMMERCE_SECURITY_SESSION_TIMEOUT=3600s
ECOMMERCE_SECURITY_RATE_LIMIT_REQUESTS=100
ECOMMERCE_SECURITY_RATE_LIMIT_WINDOW=60s

# Payment Configuration
ECOMMERCE_PAYMENT_CURRENCY=USD
ECOMMERCE_PAYMENT_TAX_RATE=0.08
ECOMMERCE_PAYMENT_SHIPPING_FEE=9.99
ECOMMERCE_PAYMENT_FREE_SHIPPING_MIN=50.0

# Stripe Configuration (Optional)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourecommerce.com

# Monitoring & Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=false

# Performance Tuning
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60